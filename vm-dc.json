{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D2_v2"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "VADMIN"
    },
    "VNET": {
      "type": "string",
      "defaultValue": "VNET02"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Test@2016"
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "BackendSubnet"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ],
      "defaultValue": "2012-R2-Datacenter"
    },
    "nicType":{
      "type": "string",
      "allowedValues": [
          "Public",
          "Private"
      ],
      "defaultValue": "Public"
  },
    "dataDriveCount": {
      "type": "int",
      "minValue": 1,
      "defaultValue": 1
    },
    "VNETResourceGroup":
    {
      "type":"string",
      "defaultValue": "BaseLab"
    },
    "StaticIP":{
      "type": "string",
      "defaultValue": ""
    },
    "DnsIPAddress":{
      "type":"string",
      "defaultValue": ""
  },
  "nicTemplateLink": {
    "type": "string"
  }

  },
  "variables": {
    "vmNICDeployementName":"[concat(parameters('virtualMachineName'),'NIC',deployment().name)]"
  },
  "resources": [
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/',variables('vmNICDeployementName'))]"
      ],
      "tags": {
        "displayName": "BaseDC"
      },
      "properties": {
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
          "copy": [
            {
              "name": "DataDisks",
              "count": "[parameters('dataDriveCount')]",
              "input": {
                "diskSizeGB": 20,
                "lun": "[copyIndex('dataDisks')]",
                "CreateOption": "Empty"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[reference(concat('Microsoft.Resources/deployments/',variables('vmNICDeployementName'))).outputs.idNIC.value]"
            }
          ]

        }

      } 
    },

    {
      "name": "[variables('vmNICDeployementName')]",
      "apiVersion": "2017-05-10",
      "type": "Microsoft.Resources/deployments",
      "properties":{
        "mode":"Incremental",
        "templateLink":{
          "uri": "[parameters('nicTemplateLink')]"
        },
        "parameters":{

          "nicType":{
            "value":"[parameters('nicType')]"
            },
          "virtualMachineName": {
            "value": "[parameters('virtualMachineName')]"
            },
          "VNETResourceGroup": {
            "value":"[parameters('VNETResourceGroup')]"
            },
          "VNET":{
            "Value": "[parameters('VNET')]"
          },
          "subnetName":{
            "Value": "[parameters('subnetName')]"
          },
          "StaticIP":{
            "value": "[parameters('StaticIP')]"
          },
          "DnsIPAddress":{
            "value": "[parameters('DnsIPAddress')]"
        }
        }
      }
    }
  ],
  "outputs": {
    "vmResourceID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]"
    }
  }
}