{   "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {  
    "GatewaySubnetAdressPrefix": {
      "type": "string"
    },
    "VNETname": {
      "type": "string"      
    },
    "VNETPrefix": {
      "type": "string"
    },
    "VNETSubnet1Name": {
      "type": "string"
    },
    "VNETSubnet1Prefix": {
      "type": "string"
    },
    "VNETSubnet2Name": {
      "type": "string"
    },
    "VNETSubnet2Prefix": {
      "type": "string"
    },
    "NSGSubnet1": {
      "type": "string"
    },
    "NSGSubnet2": {
      "type": "string"
    }
   
   
  },
  "variables": {
    "DCVnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('VNETname'))]",
    "GatewaySubnetName": "GatewaySubnet"
   
},
  "resources": [
    // NSG BE
    {
      "comments": "# NSG",
      "name": "[parameters('NSGSubnet1')]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-https-out",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 500,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    // NSG FE
    {
      "comments": "# NSG",
      "name": "[parameters('NSGSubnet2')]",
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-rdp-in",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 1000,
              "direction": "Inbound"
            }
          },
          {
            "name": "default-allow-https-out",
            "properties": {
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 500,
              "direction": "Outbound"
            }

            ]
          }
    },
    //VNET Settings
    {
      "name": "[parameters('VNETname')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/',parameters('NSGSubnet1'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/',parameters('NSGSubnet2'))]"
      ],
      "tags": {
        "displayName": "VNET"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNETPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "GatewaySubnet",
            "properties": {
              "addressPrefix": "[parameters('GatewaySubnetAdressPrefix')]"
             
            }
          },
          {
            "name": "[parameters('VNETSubnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('VNETSubnet1Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSGSubnet1'))]"
              }
            }
          },
          {
            "name": "[parameters('VNETSubnet2Name')]",
            "properties": {
              "addressPrefix": "[parameters('VNETSubnet2Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('NSGSubnet2'))]"
              }
            }

          }
        ]
      }
    }


  ],
    "outputs": {
    }
}
