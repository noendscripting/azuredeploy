{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_A2"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "vadmin"
    },
    
    "adminPassword": {
      "type": "securestring"
    },
    
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ],
      "defaultValue": "2016-Datacenter"
    },
    "nicType":{
      "type": "string",
      "allowedValues": [
          "Public",
          "Private"
      ],
      "defaultValue": "Public"
  },
    "VNETResourceGroup":
    {
      "type":"string",
      "defaultValue": "BaseLab"
    },
    "VNET": {
      "type": "string",
      "defaultValue": "VNET02"
    },
    "subnetName":{
      "type":"string",
      "defaultValue": "BackendSubnet"
    },
    "vaultName" : {
      "type":"string"
    },
    "backupPolicyDsiplayname" : {
      "type": "string"
    }


  },
  "variables": {
    
    "vmResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]",
    "vmNICDeployementName":"[concat(parameters('virtualMachineName'),'NIC',deployment().name)]"
  },
  "resources": [
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "tags": {
        "displayName": "BaseVM"
      },
      "properties": {
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite",
            "diskSizeGB": 128
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[reference(concat('Microsoft.Resources/deployments/',variables('vmNICDeployementName'))).outputs.idNIC.value]"
            }
          ]

        }

      }
    },
    {
      "name": "[variables('vmNICDeployementName')]",
      "apiVersion": "2017-05-10",
      "type": "Microsoft.Resources/deployments",
      "properties":{
        "mode":"Incremental",
        "templateLink":{
          "uri": "https://raw.githubusercontent.com/noendscripting/azuredeploy/master/base-nic.json"
        },
        "parameters":{

          "nicType":{
            "value":"[parameters('nicType')]"
            },
          "virtualMachineName": {
            "value": "[parameters('virtualMachineName')]"
            },
          "VNETResourceGroup": {
            "value":"[parameters('VNETResourceGroup')]"
            },
          "VNET":{
            "Value": "[parameters('VNET')]"
          },
          "subnetName":{
            "Value": "[parameters('subnetName')]"
          }
        }
      }
      


  },
  {   
    "name": "BackupConfig",
    "type": "Microsoft.Resources/deployments",
    "apiVersion": "2017-05-10",
    "dependsOn": [
      "[resourceId('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
    ],
    "resourceGroup": "Baselab",
    "properties":{
      "mode":"Incremental",
     "templateLink":{
       "uri": "https://raw.githubusercontent.com/noendscripting/azuredeploy/master/backup-template.json"
     },
     "parameters":{
        "vaultName" : {
          "value":"[parameters('vaultName')]"
        },
        "vmResourceID": {
          "value": "[variables('vmResourceId')]"
        },
        "backupPolicyName" : {
          "value": "[parameters('backupPolicyDsiplayname')]"
        },
        "virtualMachineName" :{
          "value":"[parameters('virtualMachineName')]"
        }
     }
    }
    
  }
  ],
  "outputs": {
    "vmResourceID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]"
    }
  }
}