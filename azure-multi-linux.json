    "resources": [
        {
            "name": "VM-VirtualNetwork",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "ubuntuVM1-VirtualNetwork"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "VM1-VirtualNetwork-Subnet",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat('NIC',variables('vm')[copyIndex()].sku,variables('vm')[copyIndex()].version)]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'VM-VirtualNetwork')]"
            ],
            "tags": {
                "displayName": "NetworkInterface"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VM-VirtualNetwork', 'VM1-VirtualNetwork-Subnet')]"
                            }
                        }
                    }
                ]
            },
            "copy": {
                "count":"[Length(variables('vm'))]",
                "name":"NICCopy"
            }
        },
        {
            "name": "[concat(variables('vm')[copyIndex()].sku,variables('vm')[copyIndex()].version)]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "NICCopy"
            ],
            "tags": {
                "displayName": "VM1CopyJob"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2s"
                },
                "osProfile": {
                    "computerName": "[concat(variables('vm')[copyIndex()].sku,variables('vm')[copyIndex()].version)]",
                    "adminUsername": "[parameters('adminuser')]",
                    "adminPassword": "Test@2016"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('vm')[copyIndex()].publisher]",
                        "offer": "[variables('vm')[copyIndex()].offer]",
                        "sku": "[variables('vm')[copyIndex()].sku]",
                        "version": "[variables('vm')[copyIndex()].version]"
                    },
                    "osDisk": {
                        "name": "[concat('Linux-',variables('vm')[copyIndex()].sku,variables('vm')[copyIndex()].version,'-VM1-OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('NIC',variables('vm')[copyIndex()].sku,variables('vm')[copyIndex()].version))]"
                        }
                    ]
                }
            },
            "copy":{
                "name": "VMCopy",
                "count": "[length(variables('vm'))]"
            }
        }
    ],
    "outputs": {}
