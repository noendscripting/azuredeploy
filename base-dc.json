{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "EastUs2"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D2_v2"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "VADMIN"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET02"
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "Test@2016"
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "BackendSubnet"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ],
      "defaultValue": "2012-R2-Datacenter"
    },
    "publicIpAddressType": {
      "type": "string",
      "defaultValue": "Dynamic"
    },
    "time": {
      "type": "string",
      "defaultValue": "23:00"
    },
    "sasKey": {
      "type": "string",
        "defaultValue": "odhdtdt"
    },
    "dataDriveCount": {
      "type": "int",
      "minValue": 1
    }

  },
  "variables": {
    "VnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkname'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "networkInterfaceName": "[concat(parameters('virtualMachineName'),'NIC')]",
    "publicIpAddressName": "[concat(parameters('virtualMachineName'),'PUBLICIP')]",
    "policyName": "[concat('shutdown-computevm-',parameters('virtualMachineName'))]",
    "vmResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]",
    "BuildConfigScriptFolder": "lab",
    "BuildConfigScriptFileName": "Temp.ps1",
    "StorageAccount": "https://101stagingacc.blob.core.windows.net"
  },
  "resources": [
    {
      "name": "[parameters('virtualMachineName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]"
      ],
      "tags": {
        "displayName": "BaseDC"
      },
      "properties": {
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('sku')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "caching": "ReadWrite"
          },
          "copy": [
            {
              "name": "DataDisks",
              "count": "[parameters('dataDriveCount')]",
              "input": {
                "diskSizeGB": 20,
                "lun": "[copyIndex('dataDisks')]",
                "CreateOption": "Empty"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
            }
          ]

        },

      }//,
      //"resources": [
      //  {
      //    "name": "BuildConfig",
      //    "type": "extensions",
      //    "location": "[parameters('location')]",
      //    "apiVersion": "2015-06-15",
      //    "dependsOn": [
      //      "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
      //    ],
      //    "tags": {
      //      "displayName": "BuildConfig"
      //    },
      //    "properties": {
      //      "publisher": "Microsoft.Compute",
      //      "type": "CustomScriptExtension",
      //      "typeHandlerVersion": "1.9",
      //      "autoUpgradeMinorVersion": true,
      //      "settings": {
      //        "fileUris": [
      //          "[concat(variables('StorageAccount'), '/', variables('BuildConfigScriptFolder'), '/', variables('BuildConfigScriptFileName'), parameters('sasKey'))]"
      //        ],
      //        "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('BuildConfigScriptFileName'))]"
      //      }
      //    }
      //  }
      //]
    },

    {
      "name": "[variables('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIpAddresses/', variables('publicIpAddressName'))]"
      ],
      "tags": {
        "displayName": "BaseDCNIC"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
              }
            }
          }
        ]

      }
    },
    {
      "name": "[variables('publicIpAddressName')]",
      "Type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "tags": {
        "displayName": "BaseDCPublicIP"
      },
      "Properties": {
        "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
      }
    }
  ],
  "outputs": {
    "adminUsername": {
      "type": "string",
      "value": "[parameters('adminUsername')]"
    }
  }
}