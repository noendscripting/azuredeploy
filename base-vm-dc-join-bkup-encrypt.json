{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "subnetName": {
      "type": "string"
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "2008-R2-SP1"
      ]
    },
    "publicIpAddressType": {
      "type": "string"
    },
    "time": {
      "type": "string",
      "defaultValue": "23:00"
    },
    "dataDriveCount": {
      "type": "int",
      "minValue": 1
    },
    "Backup" :{
        "type": "string",
        "defaultValue": "True"
    },
    "Encrypt":{
        "type": "string",
        "defaultValue": "False"
    },
     "vaultName" : {
        "type":"string"
      },
      "backupPolicyDsiplayname" : {
        "type": "string"
      },
      "keyVaultName": {
        "type": "string",  
        "metadata": {  
          "description": "Name of the KeyVault to place the volume encryption key"  
        }
      },
      "keyVaultResourceGroup": {  
        "type": "string",  
        "metadata": {  
          "description": "Resource group of the KeyVault"  
        }  
      },
      "volumeType": {
        "type": "string",
        "defaultValue": "All",  
        "metadata": {  
          "description": "Type of the volume OS or Data to perform encryption operation"
        }
      },  
      "forceUpdateTag": {  
        "type": "string",  
        "defaultValue": "1.0",  
        "metadata": {  
          "description": "Pass in an unique value like a GUID everytime the operation needs to be force run"  
        }  
      },
      "resizeOSDisk": {
        "type": "bool",
        "defaultValue": false,
        "metadata": {
          "description": "Should the OS partition be resized to occupy full OS VHD before splitting system volume"
        }
    }
  },
  "variables": {
    "VnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkname'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "networkInterfaceName": "[concat(parameters('virtualMachineName'),'NIC')]",
    "publicIpAddressName": "[concat(parameters('virtualMachineName'),'PUBLICIP')]",
    "vmResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]",
    "policyName": "[concat('shutdown-computevm-',parameters('virtualMachineName'))]",
    
    "extensionName": "AzureDiskEncryption",
    "extensionVersion": "2.2",
    "encryptionOperation": "EnableEncryption",
    "keyVaultResourceID": "[resourceId(parameters('keyVaultResourceGroup'), 'Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
    
  },
  "resources": [
    
    {
      "name": "[variables('networkInterfaceName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIpAddresses/', variables('publicIpAddressName'))]"
      ],
      "tags": {
        "displayName": "BaseVMNIC"
      },
      "properties": {
        "primary": true,
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
              }
            }
          }
        ]


      }
    
    },
    {
      "name": "[variables('publicIpAddressName')]",
      "Type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2018-08-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "BaseVMPublicIP"
      },
      "sku":{
          "name":"Basic"
      },
      "Properties": {
        "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
      }
    },
    {
        "apiVersion": "2018-09-15",
        "Type": "Microsoft.DevTestLab/schedules",
        "name": "[variables('policyName')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [ "[variables('vmResourceId')]" ],
        "tags": {
          "displayName": "BaseVMShutdown-11:00pm"
        },
        "properties": {
          "status": "Enabled",
          "timeZoneId": "Eastern Standard Time",
          "taskType": "ComputeVmShutdownTask",
          "notificationSettings": {
            "status": "Disabled",
            "timeInMinutes": 15,
            "webhookUrl": null
          },
          "targetResourceId": "[variables('vmResourceId')]",
          "dailyRecurrence": {
            "time": "[parameters('time')]"
          }
        }
        
      },
    {   
        "name": "BackupConfig",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2017-05-10",
        "dependsOn": [
          "[resourceId('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
        ],
        "resourceGroup": "StageGroup",
        "properties":{
          "mode":"Incremental",
         "templateLink":{
           "uri": "https://raw.githubusercontent.com/noendscripting/azuredeploy/master/backup-template.json"
         },
         "parameters":{
            "vaultName" : {
              "value":"[parameters('vaultName')]"
            },
            "vmResourceID": {
              "value": "[variables('vmResourceId')]"
            },
            "backupPolicyName" : {
              "value": "[parameters('backupPolicyDsiplayname')]"
            },
            "virtualMachineName" :{
              "value":"[parameters('virtualMachineName')]"
            }
         }
        }
        
      }
      
      
  ],
  "outputs": {
    "keyVaultURL":{
      "type": "string",
      "value": "[reference(variables('keyVaultResourceId'),'2016-10-01').vaultUri]"
    }
  }
}